# Contributor: Ner0 <darkelfdarkelf666@yahoo.co.uk>

pkgname=gtklash
pkgver=0.1
pkgrel=1
pkgdesc='A proxy client that supports multiple protocol'
arch=(x86_64)
url='https://github.com/elementary/code'
license=(GPL3)
depends=(
  glib2
  gtk3
  libgee
  libsoup
  librsvg
  json-glib
  gtksourceview4
  gnome-icon-theme-symbolic
)
makedepends=(
  git
  meson
  vala
  go
)
optdepends=()
source=($pkgname::git+https://github.com/balthild/gtklash.git)
sha256sums=(SKIP)

build() {
  arch-meson gtklash build
  ninja -C build
}

package() {
  DESTDIR="${pkgdir}" ninja -C build install
}
